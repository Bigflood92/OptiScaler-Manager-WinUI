<Page
    x:Class="OptiScaler.UI.Views.GamesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:OptiScaler.Core.Models"
    Background="Transparent">

    <ScrollViewer>
        <StackPanel Spacing="32">
            
            <!-- Hero Header con gradiente -->
            <Grid MinHeight="180" Padding="40,24">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#1A1A1A" Offset="0"/>
                        <GradientStop Color="#2D5A5A" Offset="0.5"/>
                        <GradientStop Color="#4A2D5A" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                
                <StackPanel VerticalAlignment="Center" Spacing="12">
                    <TextBlock 
                        Text="My Games"
                        FontSize="36"
                        FontWeight="Bold"
                        Foreground="White"/>
                    <TextBlock 
                        Text="Manage and optimize your game library with OptiScaler"
                        FontSize="16"
                        Foreground="#CCCCCC"/>
                    
                    <!-- Action buttons -->
                    <StackPanel Orientation="Horizontal" Spacing="16" Margin="0,16,0,0">
                        <Button 
                            Content="Scan for games"
                            Style="{StaticResource XboxButtonStyle}"
                            Click="ScanGames_Click"/>
                        <Button 
                            Content="Refresh"
                            Style="{StaticResource XboxSecondaryButtonStyle}"
                            Click="Refresh_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <!-- Games Section -->
            <StackPanel Padding="40,0" Spacing="20">
                <TextBlock 
                    Text="Installed Games"
                    FontSize="24"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Margin="0,0,0,8"/>
                
                <!-- Games Grid -->
                <TextBlock 
                    Text="Game cards will appear here (data binding pending)"
                    FontSize="16"
                    Foreground="#666666"
                    Margin="0,40"/>
                
                <!-- Placeholder: Manual card para testing visual -->
                <Grid 
                    Background="#1E1E1E"
                    CornerRadius="8"
                    Height="200"
                    MaxWidth="280"
                    HorizontalAlignment="Left">
                    
                    <Grid.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#2D2D2D" Offset="0"/>
                            <GradientStop Color="#1A1A1A" Offset="1"/>
                        </LinearGradientBrush>
                    </Grid.Background>

                    <Grid Padding="20" VerticalAlignment="Bottom">
                        <Grid.Background>
                            <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                <GradientStop Color="#DD000000" Offset="0"/>
                                <GradientStop Color="Transparent" Offset="1"/>
                            </LinearGradientBrush>
                        </Grid.Background>
                        
                        <StackPanel Spacing="8">
                            <TextBlock 
                                Text="Example Game" 
                                FontSize="18"
                                FontWeight="SemiBold"
                                Foreground="White"/>
                            
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <Border 
                                    Background="#33FFFFFF"
                                    CornerRadius="4"
                                    Padding="8,4">
                                    <TextBlock 
                                        Text="Steam" 
                                        FontSize="12"
                                        Foreground="White"/>
                                </Border>
                                
                                <Border 
                                    Background="#107C10"
                                    CornerRadius="4"
                                    Padding="8,4">
                                    <TextBlock 
                                        Text="OptiScaler" 
                                        FontSize="12"
                                        Foreground="White"
                                        FontWeight="SemiBold"/>
                                </Border>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
                                <Button 
                                    Content="Play"
                                    Style="{StaticResource XboxGreenButtonStyle}"/>
                                <Button 
                                    Content="Install Mod"
                                    Style="{StaticResource XboxSecondaryButtonStyle}"
                                    MinHeight="40"
                                    MinWidth="110"
                                    FontSize="14"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Grid>
                
                <!-- Empty state (sin binding temporalmente) -->
                <Grid 
                    MinHeight="400">
                    <StackPanel 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="24"
                        MaxWidth="500">
                        <FontIcon 
                            Glyph="&#xE80F;" 
                            FontSize="80"
                            Foreground="#33FFFFFF"/>
                        <TextBlock 
                            Text="No games found"
                            FontSize="28"
                            FontWeight="SemiBold"
                            Foreground="White"
                            HorizontalAlignment="Center"/>
                        <TextBlock 
                            Text="Scan your system to detect installed games from Steam, Epic Games, Xbox, and more"
                            FontSize="16"
                            Foreground="#CCCCCC"
                            TextAlignment="Center"
                            TextWrapping="Wrap"
                            MaxWidth="400"/>
                        <Button 
                            Content="Scan now"
                            Style="{StaticResource XboxButtonStyle}"
                            Height="52"
                            MinWidth="180"
                            FontSize="16"
                            Click="ScanGames_Click"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>

<Page
    x:Class="OptiScaler.UI.Views.ScanPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="Transparent">

    <ScrollViewer>
        <StackPanel Spacing="24" Padding="32">
            
            <!-- Hero Header -->
            <Grid 
                Height="120" 
                CornerRadius="12"
                Background="{StaticResource HeroGradient}">
                <StackPanel 
                    VerticalAlignment="Center" 
                    Padding="32,0"
                    Spacing="8">
                    <TextBlock 
                        Text="Scan Settings"
                        FontSize="32"
                        FontWeight="Bold"
                        Foreground="White"/>
                    <TextBlock 
                        Text="Configure game detection and scanning preferences"
                        FontSize="16"
                        Foreground="#CCFFFFFF"/>
                </StackPanel>
            </Grid>

            <!-- Quick Actions -->
            <Grid ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock 
                    Grid.Column="0"
                    Text="Manage which platforms and folders to scan for games"
                    FontSize="14"
                    Foreground="{StaticResource TextGrayBrush}"
                    VerticalAlignment="Center"/>

                <Button 
                    Grid.Column="1"
                    Style="{StaticResource XboxGreenButtonStyle}"
                    Height="48"
                    MinWidth="140">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE721;" FontSize="16"/>
                        <TextBlock Text="Scan Now"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Coming Soon Content -->
            <Border 
                Background="{StaticResource CardDarkBrush}"
                CornerRadius="12"
                Padding="48"
                MinHeight="400"
                BorderBrush="#33FFFFFF"
                BorderThickness="1">
                <StackPanel 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="24"
                    MaxWidth="500">
                    <FontIcon 
                        Glyph="&#xE721;" 
                        FontSize="80"
                        Foreground="#33FFFFFF"/>
                    <TextBlock 
                        Text="Advanced Scan Settings Coming Soon"
                        FontSize="28"
                        FontWeight="SemiBold"
                        Foreground="White"
                        HorizontalAlignment="Center"
                        TextAlignment="Center"
                        TextWrapping="Wrap"/>
                    <TextBlock 
                        Text="Customize which gaming platforms and directories OptiScaler Manager scans to detect your games."
                        FontSize="16"
                        Foreground="#CCCCCC"
                        TextAlignment="Center"
                        TextWrapping="Wrap"/>
                    
                    <!-- Feature List -->
                    <StackPanel Spacing="12" Margin="0,16,0,0">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE73E;" FontSize="16" Foreground="{StaticResource XboxGreenBrush}"/>
                            <TextBlock Text="Enable/disable specific platforms" Foreground="#CCCCCC"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE73E;" FontSize="16" Foreground="{StaticResource XboxGreenBrush}"/>
                            <TextBlock Text="Add custom game directories" Foreground="#CCCCCC"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE73E;" FontSize="16" Foreground="{StaticResource XboxGreenBrush}"/>
                            <TextBlock Text="Exclude specific folders from scanning" Foreground="#CCCCCC"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE73E;" FontSize="16" Foreground="{StaticResource XboxGreenBrush}"/>
                            <TextBlock Text="Auto-scan on application startup" Foreground="#CCCCCC"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE73E;" FontSize="16" Foreground="{StaticResource XboxGreenBrush}"/>
                            <TextBlock Text="Scheduled background scans" Foreground="#CCCCCC"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>

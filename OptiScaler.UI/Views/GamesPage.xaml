<Page
    x:Class="OptiScaler.UI.Views.GamesPage"
    x:Name="RootPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:OptiScaler.Core.Models"
    xmlns:helpers="using:OptiScaler.UI.Helpers"
    xmlns:converters="using:OptiScaler.UI.Converters"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- Converters -->
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <helpers:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <helpers:GamePlatformToStringConverter x:Key="GamePlatformToStringConverter"/>
        <helpers:GamePlatformToIconConverter x:Key="GamePlatformToIconConverter"/>
        <helpers:ModStatusToTextConverter x:Key="ModStatusToTextConverter"/>
        <helpers:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <converters:BoolToBackgroundConverter x:Key="BoolToBackgroundConverter"/>
        <converters:BoolToIconConverter x:Key="BoolToIconConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Page.Resources>

    <ScrollViewer>
        <StackPanel Spacing="24" Padding="32">
            
            <!-- Hero Header -->
            <Grid 
                Height="120" 
                CornerRadius="12"
                Background="{StaticResource HeroGradient}">
                <StackPanel 
                    VerticalAlignment="Center" 
                    Padding="32,0"
                    Spacing="8">
                    <TextBlock 
                        Text="Games Library"
                        FontSize="32"
                        FontWeight="Bold"
                        Foreground="White"/>
                    <TextBlock 
                        Text="Manage OptiScaler mods for your installed games"
                        FontSize="16"
                        Foreground="#CCFFFFFF"/>
                </StackPanel>
                
                <!-- Scan/Refresh Button -->
                <Button 
                    x:Name="ScanRefreshButton"
                    Style="{StaticResource XboxButtonStyle}"
                    Click="ScanGames_Click"
                    Height="36"
                    MinWidth="120"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,20,20,0">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <FontIcon x:Name="ScanRefreshIcon" Glyph="&#xE721;" FontSize="14"/>
                        <TextBlock x:Name="ScanRefreshText" Text="Scan Games"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Search Box -->
            <Grid ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox 
                    Grid.Column="0"
                    PlaceholderText="Search games..."
                    Text="{x:Bind ViewModel.SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Height="40"
                    VerticalAlignment="Center"/>

                <!-- Filter Button (Visual only - shows search is available) -->
                <Button 
                    Grid.Column="1"
                    Style="{StaticResource XboxButtonStyle}"
                    Height="40"
                    MinWidth="100"
                    VerticalAlignment="Center"
                    ToolTipService.ToolTip="Filter by platform (Steam, Epic, Xbox, etc.)">
                    <Button.Flyout>
                        <Flyout Placement="BottomEdgeAlignedRight">
                            <StackPanel Width="200" Spacing="8">
                                <TextBlock 
                                    Text="Filter by Platform"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Margin="0,0,0,8"/>
                                <TextBlock 
                                    Text="Use the search box to filter games by name or platform (Steam, Epic, Xbox, GOG, EA, Ubisoft)"
                                    FontSize="12"
                                    Foreground="#CCCCCC"
                                    TextWrapping="Wrap"/>
                            </StackPanel>
                        </Flyout>
                    </Button.Flyout>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE71C;" FontSize="16"/>
                        <TextBlock Text="Filter"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Installation Progress InfoBar -->
            <InfoBar
                IsOpen="{x:Bind ViewModel.IsInstallingMod, Mode=OneWay}"
                Severity="Informational"
                Message="{x:Bind ViewModel.StatusMessage, Mode=OneWay}"
                IsClosable="False">
                <InfoBar.Content>
                    <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,8,0,0">
                        <ProgressRing 
                            IsActive="{x:Bind ViewModel.IsInstallingMod, Mode=OneWay}"
                            Width="20"
                            Height="20"/>
                        <TextBlock 
                            Text="Please wait..."
                            VerticalAlignment="Center"
                            Foreground="{StaticResource TextGrayBrush}"/>
                    </StackPanel>
                </InfoBar.Content>
            </InfoBar>

            <!-- Status Bar -->
            <Grid 
                Background="{StaticResource CardDarkBrush}"
                CornerRadius="8"
                Padding="16"
                Visibility="{x:Bind ViewModel.IsScanning, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <ProgressRing 
                    Grid.Column="0"
                    IsActive="{x:Bind ViewModel.IsScanning, Mode=OneWay}"
                    Width="24"
                    Height="24"
                    Margin="0,0,12,0"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock 
                        Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}"
                        FontSize="14"
                        Foreground="White"/>
                    <ProgressBar 
                        Value="{x:Bind ViewModel.ScanProgress, Mode=OneWay}"
                        Maximum="100"
                        Margin="0,8,0,0"
                        Height="4"/>
                </StackPanel>
            </Grid>

            <!-- Games Grid -->
            <Grid>
                <!-- ItemsRepeater for Games -->
                <ScrollViewer 
                    Visibility="{x:Bind ViewModel.HasNoGames, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                    <ItemsRepeater 
                        ItemsSource="{x:Bind ViewModel.Games, Mode=OneWay}"
                        Margin="0,0,0,24">
                        <ItemsRepeater.Layout>
                            <UniformGridLayout 
                                MinItemWidth="280" 
                                MinItemHeight="360"
                                ItemsStretch="Fill"
                                MinColumnSpacing="16"
                                MinRowSpacing="16"/>
                        </ItemsRepeater.Layout>
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate x:DataType="models:GameInfo">
                                <!-- Game Card -->
                                <Grid 
                                    Background="{StaticResource XboxCardGradient}"
                                    CornerRadius="8"
                                    Padding="16"
                                    BorderBrush="#33FFFFFF"
                                    BorderThickness="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Settings Button (Top Right Corner) - ALWAYS VISIBLE -->
                                    <Button 
                                        Grid.Row="0"
                                        Click="ShowSettings_Click"
                                        Tag="{x:Bind}"
                                        Width="32"
                                        Height="32"
                                        Padding="0"
                                        Background="#33FFFFFF"
                                        CornerRadius="4"
                                        BorderThickness="0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Margin="0,-6,-6,0"
                                        ToolTipService.ToolTip="Game Configuration">
                                        <FontIcon Glyph="&#xE713;" FontSize="14" Foreground="White"/>
                                    </Button>
                                    
                                    <!-- Game Title -->
                                    <TextBlock 
                                        Grid.Row="0"
                                        Text="{x:Bind Name}"
                                        FontSize="18"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        TextWrapping="Wrap"
                                        MaxLines="2"
                                        TextTrimming="CharacterEllipsis"
                                        Margin="0,0,48,0"
                                        ToolTipService.ToolTip="{x:Bind Name}"/>

                                    <!-- Platform & Status Info -->
                                    <StackPanel 
                                        Grid.Row="1" 
                                        Spacing="12" 
                                        Margin="0,16,0,16"
                                        VerticalAlignment="Top">
                                        
                                        <!-- Platform Badge -->
                                        <Border 
                                            Background="#33FFFFFF"
                                            CornerRadius="4"
                                            Padding="10,6"
                                            HorizontalAlignment="Left">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon 
                                                    Glyph="{x:Bind Platform, Converter={StaticResource GamePlatformToIconConverter}}"
                                                    FontSize="14"
                                                    Foreground="White"/>
                                                <TextBlock 
                                                    Text="{x:Bind Platform, Converter={StaticResource GamePlatformToStringConverter}}"
                                                    FontSize="12"
                                                    Foreground="White"
                                                    FontWeight="SemiBold"/>
                                            </StackPanel>
                                        </Border>

                                        <!-- Mod Status Section -->
                                        <Grid ColumnSpacing="8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Left Column - Installation Status -->
                                            <StackPanel Grid.Column="0" Spacing="6">
                                                <TextBlock 
                                                    Text="Mod Status" 
                                                    FontSize="11" 
                                                    Foreground="#CCCCCC" 
                                                    FontWeight="SemiBold"
                                                    Margin="0,0,0,2"/>

                                                <!-- OptiScaler Status -->
                                                <Border 
                                                    Background="{x:Bind HasOptiScaler, Mode=OneWay, Converter={StaticResource BoolToBackgroundConverter}}"
                                                    CornerRadius="4"
                                                    Padding="8,4"
                                                    HorizontalAlignment="Stretch"
                                                    ToolTipService.ToolTip="OptiScaler provides DLSS, FSR, and XeSS upscaling technology">
                                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                                        <FontIcon 
                                                            Glyph="{x:Bind HasOptiScaler, Mode=OneWay, Converter={StaticResource BoolToIconConverter}}"
                                                            FontSize="12"
                                                            Foreground="White"/>
                                                        <TextBlock 
                                                            Text="OptiScaler"
                                                            FontSize="11"
                                                            Foreground="White"
                                                            FontWeight="SemiBold"/>
                                                    </StackPanel>
                                                </Border>

                                                <!-- OptiPatcher Status -->
                                                <Border 
                                                    Background="{x:Bind HasOptiPatcher, Mode=OneWay, Converter={StaticResource BoolToBackgroundConverter}}"
                                                    CornerRadius="4"
                                                    Padding="8,4"
                                                    HorizontalAlignment="Stretch"
                                                    ToolTipService.ToolTip="OptiPatcher enables AMD FidelityFX Frame Generation for higher FPS">
                                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                                        <FontIcon 
                                                            Glyph="{x:Bind HasOptiPatcher, Mode=OneWay, Converter={StaticResource BoolToIconConverter}}"
                                                            FontSize="12"
                                                            Foreground="White"/>
                                                        <TextBlock 
                                                            Text="OptiPatcher"
                                                            FontSize="11"
                                                            Foreground="White"
                                                            FontWeight="SemiBold"/>
                                                    </StackPanel>
                                                </Border>
                                            </StackPanel>

                                            <!-- Right Column - Configuration Details -->
                                            <StackPanel Grid.Column="1" Spacing="6" Visibility="{x:Bind HasOptiScaler, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <TextBlock 
                                                    Text="Configuration" 
                                                    FontSize="11" 
                                                    Foreground="#CCCCCC" 
                                                    FontWeight="SemiBold"
                                                    Margin="0,0,0,2"/>

                                                <!-- Upscaling Method -->
                                                <Border 
                                                    Background="#1D4ED8"
                                                    CornerRadius="4"
                                                    Padding="8,4"
                                                    HorizontalAlignment="Stretch"
                                                    Visibility="{x:Bind UpscalingMethod, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}"
                                                    ToolTipService.ToolTip="Current upscaling technology (DLSS/FSR/XeSS)">
                                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                                        <FontIcon 
                                                            Glyph="&#xE8B3;"
                                                            FontSize="12"
                                                            Foreground="White"/>
                                                        <TextBlock 
                                                            Text="{x:Bind UpscalingMethod, Mode=OneWay}"
                                                            FontSize="11"
                                                            Foreground="White"
                                                            FontWeight="SemiBold"/>
                                                    </StackPanel>
                                                </Border>

                                                <!-- Frame Generation -->
                                                <Border 
                                                    Background="#059669"
                                                    CornerRadius="4"
                                                    Padding="8,4"
                                                    HorizontalAlignment="Stretch"
                                                    Visibility="{x:Bind HasFrameGeneration, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                                                    ToolTipService.ToolTip="AMD FidelityFX Frame Generation - increases FPS by generating intermediate frames">
                                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                                        <FontIcon 
                                                            Glyph="&#xE945;"
                                                            FontSize="12"
                                                            Foreground="White"/>
                                                        <TextBlock 
                                                            Text="Frame Gen"
                                                            FontSize="11"
                                                            Foreground="White"
                                                            FontWeight="SemiBold"/>
                                                    </StackPanel>
                                                </Border>

                                                <!-- Quality Preset -->
                                                <Border 
                                                    Background="#7C3AED"
                                                    CornerRadius="4"
                                                    Padding="8,4"
                                                    HorizontalAlignment="Stretch"
                                                    Visibility="{x:Bind QualityPreset, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}"
                                                    ToolTipService.ToolTip="Upscaling quality preset - balance between performance and image quality">
                                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                                        <FontIcon 
                                                            Glyph="&#xE8B8;"
                                                            FontSize="12"
                                                            Foreground="White"/>
                                                        <TextBlock 
                                                            Text="{x:Bind QualityPreset, Mode=OneWay}"
                                                            FontSize="11"
                                                            Foreground="White"
                                                            FontWeight="SemiBold"/>
                                                    </StackPanel>
                                                </Border>
                                            </StackPanel>
                                        </Grid>

                                        <!-- Game Path -->
                                        <TextBlock 
                                            Text="{x:Bind DisplayPath}"
                                            FontSize="11"
                                            Foreground="#999999"
                                            TextWrapping="Wrap"
                                            MaxLines="2"
                                            TextTrimming="CharacterEllipsis"
                                            ToolTipService.ToolTip="{x:Bind DisplayPath}"/>
                                    </StackPanel>

                                    <!-- Action Buttons -->
                                    <StackPanel 
                                        Grid.Row="2" 
                                        Spacing="8">
                                        
                                        <!-- LAYOUT FOR GAMES WITH OPTISCALER -->
                                        <StackPanel 
                                            Spacing="8"
                                            Visibility="{x:Bind HasOptiScaler, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                            
                                            <!-- Launch Game Button (Green - Primary Action) -->
                                            <Button 
                                                Style="{StaticResource XboxGreenButtonStyle}"
                                                Click="Launch_Click"
                                                Tag="{x:Bind}"
                                                HorizontalAlignment="Stretch"
                                                AutomationProperties.Name="{x:Bind Name, Mode=OneWay}">
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <FontIcon Glyph="&#xE768;" FontSize="16"/>
                                                    <TextBlock Text="Launch Game"/>
                                                </StackPanel>
                                            </Button>

                                            <!-- Buttons Row (Details + Uninstall) -->
                                            <Grid ColumnSpacing="8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Details Button -->
                                                <Button 
                                                    Grid.Column="0"
                                                    Style="{StaticResource XboxButtonStyle}"
                                                    Click="ShowDetails_Click"
                                                    Tag="{x:Bind}"
                                                    HorizontalAlignment="Stretch">
                                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                                        <FontIcon Glyph="&#xE946;" FontSize="14"/>
                                                        <TextBlock Text="Details"/>
                                                    </StackPanel>
                                                    <ToolTipService.ToolTip>
                                                        <ToolTip MaxWidth="400">
                                                            <StackPanel Spacing="12">
                                                                <!-- Game Title -->
                                                                <TextBlock Text="{x:Bind Name}" FontSize="16" FontWeight="Bold" Foreground="White"/>
                                                                
                                                                <Border Height="1" Background="#33FFFFFF"/>
                                                                
                                                                <!-- Platform &amp; Path -->
                                                                <StackPanel Spacing="6">
                                                                    <TextBlock FontSize="12" FontWeight="SemiBold" Foreground="#CCCCCC">
                                                                        <Run Text="Platform:"/>
                                                                        <Run Text="{x:Bind Platform, Converter={StaticResource GamePlatformToStringConverter}}" Foreground="White"/>
                                                                    </TextBlock>
                                                                    <TextBlock Text="{x:Bind Executable}" FontSize="11" Foreground="#999999" TextWrapping="Wrap"/>
                                                                </StackPanel>
                                                                
                                                                <Border Height="1" Background="#33FFFFFF"/>
                                                                
                                                                <!-- WITH MODS SECTION (only if HasOptiScaler = true) -->
                                                                <StackPanel Spacing="8" Visibility="{x:Bind HasOptiScaler, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                                                    
                                                                    <!-- Mod Status -->
                                                                    <StackPanel Spacing="4">
                                                                        <TextBlock Text="Installed Mods:" FontSize="12" FontWeight="SemiBold" Foreground="#CCCCCC"/>
                                                                        
                                                                        <!-- OptiScaler -->
                                                                        <StackPanel Orientation="Horizontal" Spacing="6">
                                                                            <FontIcon Glyph="&#xE73E;" FontSize="12" Foreground="#10B981"/>
                                                                            <TextBlock FontSize="11">
                                                                                <Run Text="OptiScaler" FontWeight="SemiBold" Foreground="White"/>
                                                                                <Run Text=" - Upscaling technology" Foreground="#999999"/>
                                                                            </TextBlock>
                                                                        </StackPanel>
                                                                        
                                                                        <!-- OptiPatcher -->
                                                                        <StackPanel Orientation="Horizontal" Spacing="6" Visibility="{x:Bind HasOptiPatcher, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                                                            <FontIcon Glyph="&#xE73E;" FontSize="12" Foreground="#10B981"/>
                                                                            <TextBlock FontSize="11">
                                                                                <Run Text="OptiPatcher" FontWeight="SemiBold" Foreground="White"/>
                                                                                <Run Text=" - Frame Generation" Foreground="#999999"/>
                                                                            </TextBlock>
                                                                        </StackPanel>
                                                                    </StackPanel>
                                                                    
                                                                    <!-- Configuration -->
                                                                    <StackPanel Spacing="4">
                                                                        <TextBlock Text="Configuration:" FontSize="12" FontWeight="SemiBold" Foreground="#CCCCCC"/>
                                                                        
                                                                        <!-- Upscaling Method -->
                                                                        <StackPanel Orientation="Horizontal" Spacing="6" Visibility="{x:Bind UpscalingMethod, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}">
                                                                            <FontIcon Glyph="&#xE8B3;" FontSize="12" Foreground="#60A5FA"/>
                                                                            <TextBlock FontSize="11">
                                                                                <Run Text="Upscaler:" Foreground="#999999"/>
                                                                                <Run Text="{x:Bind UpscalingMethod, Mode=OneWay}" FontWeight="SemiBold" Foreground="#60A5FA"/>
                                                                            </TextBlock>
                                                                        </StackPanel>
                                                                        
                                                                        <!-- Quality Preset -->
                                                                        <StackPanel Orientation="Horizontal" Spacing="6" Visibility="{x:Bind QualityPreset, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}">
                                                                            <FontIcon Glyph="&#xE8B8;" FontSize="12" Foreground="#A78BFA"/>
                                                                            <TextBlock FontSize="11">
                                                                                <Run Text="Quality:" Foreground="#999999"/>
                                                                                <Run Text="{x:Bind QualityPreset, Mode=OneWay}" FontWeight="SemiBold" Foreground="#A78BFA"/>
                                                                            </TextBlock>
                                                                        </StackPanel>
                                                                        
                                                                        <!-- Frame Generation -->
                                                                        <StackPanel Orientation="Horizontal" Spacing="6" Visibility="{x:Bind HasFrameGeneration, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                                                            <FontIcon Glyph="&#xE945;" FontSize="12" Foreground="#34D399"/>
                                                                            <TextBlock FontSize="11">
                                                                                <Run Text="Frame Gen:" Foreground="#999999"/>
                                                                                <Run Text="Enabled" FontWeight="SemiBold" Foreground="#34D399"/>
                                                                            </TextBlock>
                                                                        </StackPanel>
                                                                    </StackPanel>
                                                                </StackPanel>
                                                                
                                                                <!-- WITHOUT MODS SECTION (only if HasOptiScaler = false) -->
                                                                <StackPanel Spacing="4" Visibility="{x:Bind HasOptiScaler, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                                                    <TextBlock FontSize="11" Foreground="#F59E0B" TextWrapping="Wrap">
                                                                        <Run Text="?? No mods installed." FontWeight="SemiBold"/>
                                                                        <LineBreak/>
                                                                        <Run Text="Click 'Install Mods' to add OptiScaler support."/>
                                                                    </TextBlock>
                                                                </StackPanel>
                                                            </StackPanel>
                                                        </ToolTip>
                                                    </ToolTipService.ToolTip>
                                                </Button>

                                                <!-- Uninstall Mod Button -->
                                                <Button 
                                                    Grid.Column="1"
                                                    Style="{StaticResource XboxDangerButtonStyle}"
                                                    Click="UninstallMod_Click"
                                                    Tag="{x:Bind}"
                                                    HorizontalAlignment="Stretch">
                                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                                        <FontIcon Glyph="&#xE74D;" FontSize="14"/>
                                                        <TextBlock Text="Uninstall"/>
                                                    </StackPanel>
                                                </Button>
                                            </Grid>
                                        </StackPanel>

                                        <!-- LAYOUT FOR GAMES WITHOUT OPTISCALER -->
                                        <StackPanel 
                                            Spacing="8"
                                            Visibility="{x:Bind HasOptiScaler, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                            
                                            <!-- Install Mod Button (Green - Primary Action) -->
                                            <Button 
                                                Style="{StaticResource XboxGreenButtonStyle}"
                                                Click="InstallMod_Click"
                                                Tag="{x:Bind}"
                                                HorizontalAlignment="Stretch"
                                                AutomationProperties.Name="{x:Bind Name, Mode=OneWay}">
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <FontIcon Glyph="&#xE896;" FontSize="16"/>
                                                    <TextBlock Text="Install Mods"/>
                                                </StackPanel>
                                            </Button>

                                            <!-- Launch Game Button (Gray - Secondary Action) -->
                                            <Button 
                                                Style="{StaticResource XboxPrimaryButtonStyle}"
                                                Click="Launch_Click"
                                                Tag="{x:Bind}"
                                                HorizontalAlignment="Stretch"
                                                AutomationProperties.Name="{x:Bind Name, Mode=OneWay}">
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <FontIcon Glyph="&#xE768;" FontSize="16"/>
                                                    <TextBlock Text="Launch Game"/>
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                </ScrollViewer>

                <!-- Empty State -->
                <Grid 
                    MinHeight="400"
                    Visibility="{x:Bind ViewModel.HasNoGames, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="24"
                        MaxWidth="500">
                        <FontIcon 
                            Glyph="&#xE7FC;" 
                            FontSize="80"
                            Foreground="#33FFFFFF"/>
                        <TextBlock 
                            Text="No games found"
                            FontSize="28"
                            FontWeight="SemiBold"
                            Foreground="White"
                            HorizontalAlignment="Center"/>
                        <TextBlock 
                            Text="Scan your system to detect installed games from Steam, Epic Games, Xbox, EA, Ubisoft, GOG and more"
                            FontSize="16"
                            Foreground="#CCCCCC"
                            TextAlignment="Center"
                            TextWrapping="Wrap"
                            MaxWidth="400"/>
                        <Button 
                            Style="{StaticResource XboxGreenButtonStyle}"
                            Click="ScanGames_Click"
                            Height="52"
                            MinWidth="180"
                            FontSize="16"
                            AutomationProperties.Name="Scan for games">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <FontIcon Glyph="&#xE721;" FontSize="20"/>
                                <TextBlock Text="Scan Now" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>

        </StackPanel>
    </ScrollViewer>
</Page>

<Window
    x:Class="OptiScaler.UI.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource BackgroundBlackBrush}">
        <NavigationView
            x:Name="NavView"
            IsBackButtonVisible="Collapsed"
            IsSettingsVisible="False"
            PaneDisplayMode="LeftCompact"
            OpenPaneLength="240"
            CompactPaneLength="68"
            IsPaneToggleButtonVisible="True"
            SelectionChanged="NavigationView_SelectionChanged"
            Background="#0A0A0A">

            <NavigationView.Resources>
                <!-- Match NavigationView colors with title bar -->
                <SolidColorBrush x:Key="NavigationViewContentBackground" Color="#0A0A0A"/>
                <SolidColorBrush x:Key="NavigationViewTopPaneBackground" Color="#0A0A0A"/>
                <SolidColorBrush x:Key="NavigationViewDefaultPaneBackground" Color="#0A0A0A"/>
                <SolidColorBrush x:Key="NavigationViewExpandedPaneBackground" Color="#0A0A0A"/>
            </NavigationView.Resources>

            <NavigationView.MenuItems>
                <!-- Games -->
                <NavigationViewItem 
                    Tag="games" 
                    Content="Games"
                    IsSelected="True"
                    Height="68">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE7FC;" FontSize="20"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <!-- Mod Manager -->
                <NavigationViewItem 
                    Tag="mod-manager" 
                    Content="Mod Manager"
                    Height="68">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE896;" FontSize="20"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <!-- Mod Configuration -->
                <NavigationViewItem 
                    Tag="mod-config" 
                    Content="Mod Configuration"
                    Height="68">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE713;" FontSize="20"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <!-- App Settings (moved to regular menu item instead of settings button) -->
                <NavigationViewItem 
                    Tag="app-settings" 
                    Content="App Settings"
                    Height="68">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE90F;" FontSize="20"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <!-- Content Frame -->
            <Frame 
                x:Name="ContentFrame"
                IsNavigationStackEnabled="False">
                <Frame.ContentTransitions>
                    <TransitionCollection>
                        <NavigationThemeTransition>
                            <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                                <EntranceNavigationTransitionInfo/>
                            </NavigationThemeTransition.DefaultNavigationTransitionInfo>
                        </NavigationThemeTransition>
                    </TransitionCollection>
                </Frame.ContentTransitions>
            </Frame>
        </NavigationView>

        <!-- Global Notification Bar -->
        <InfoBar
            x:Name="NotificationBar"
            VerticalAlignment="Top"
            Margin="88,20,20,0"
            IsOpen="False"
            IsClosable="True"
            CornerRadius="8"/>
    </Grid>
</Window>
